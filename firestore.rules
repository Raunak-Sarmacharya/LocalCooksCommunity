rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      
      // Admins can read all users
      allow read: if isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // ============================================
    // CHAT CONVERSATIONS - Real-time messaging
    // HIGH-3 Security: Restrict to conversation participants only
    // ============================================
    match /conversations/{conversationId} {
      // Helper: check if current user is a participant in this conversation
      function isParticipant() {
        return request.auth.uid == resource.data.chefFirebaseUid 
            || request.auth.uid == resource.data.managerFirebaseUid;
      }
      
      // Only participants can read their own conversations
      allow read: if isAuthenticated() && isParticipant();
      // Allow create if authenticated (participants set during creation)
      allow create: if isAuthenticated();
      // Only participants can update
      allow update: if isAuthenticated() && isParticipant();
      // No deletes
      allow delete: if false;
      
      // Messages subcollection - restricted to conversation participants
      match /messages/{messageId} {
        // Check parent conversation to verify participant access
        function isConversationParticipant() {
          let conv = get(/databases/$(database)/documents/conversations/$(conversationId));
          return request.auth.uid == conv.data.chefFirebaseUid 
              || request.auth.uid == conv.data.managerFirebaseUid;
        }
        
        allow read: if isAuthenticated() && isConversationParticipant();
        allow create: if isAuthenticated() && isConversationParticipant();
        allow update: if isAuthenticated() && isConversationParticipant();
        allow delete: if false;
      }
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
