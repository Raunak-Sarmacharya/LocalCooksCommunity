rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      
      // Admins can read all users
      allow read: if isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // ============================================
    // CHAT CONVERSATIONS - Real-time messaging
    // ============================================
    // Conversations collection for chef-manager chat
    match /conversations/{conversationId} {
      // Allow authenticated users to read/write/list conversations
      // Note: Application layer verifies chefId/managerId matches
      // We use Firebase UID for auth, but store Neon user IDs in conversation
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow list: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
      
      // Messages subcollection - real-time chat messages
      match /messages/{messageId} {
        // Allow authenticated users to read/write/list messages
        // Application layer handles authorization (chef vs manager)
        allow read: if isAuthenticated();
        allow write: if isAuthenticated();
        allow list: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update: if isAuthenticated();
        allow delete: if isAuthenticated();
      }
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
