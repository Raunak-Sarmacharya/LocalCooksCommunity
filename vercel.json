{
  "version": 2,
  "buildCommand": "node vercel-build.mjs",
  "outputDirectory": "dist/client",
  "devCommand": "npm run dev",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/vercel-server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "vercel-server.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}