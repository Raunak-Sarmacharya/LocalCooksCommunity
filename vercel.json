{
  "version": 2,
  "buildCommand": "npm run build:production",
  "outputDirectory": "dist/client",
  "devCommand": "npm run dev",
  "env": {
    "VERCEL": "true"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/admin/login",
      "has": [
        {
          "type": "host",
          "value": "^(?!admin\\.|dev-admin\\.|dev\\.localcooks|localcooks\\.ca$).*"
        }
      ],
      "destination": "https://admin.localcooks.ca/admin/login",
      "permanent": false
    },
    {
      "source": "/admin",
      "has": [
        {
          "type": "host",
          "value": "^(?!admin\\.|dev-admin\\.|dev\\.localcooks|localcooks\\.ca$).*"
        }
      ],
      "destination": "https://admin.localcooks.ca/admin",
      "permanent": false
    },
    {
      "source": "/apply",
      "has": [
        {
          "type": "host",
          "value": "^(?!chef\\.|dev-chef\\.|dev\\.localcooks|localcooks\\.ca$).*"
        }
      ],
      "destination": "https://chef.localcooks.ca/apply",
      "permanent": false
    },
    {
      "source": "/dashboard",
      "has": [
        {
          "type": "host",
          "value": "^(?!chef\\.|dev-chef\\.|dev\\.localcooks|localcooks\\.ca$).*"
        }
      ],
      "destination": "https://chef.localcooks.ca/dashboard",
      "permanent": false
    },
    {
      "source": "/book-kitchen",
      "has": [
        {
          "type": "host",
          "value": "^(?!chef\\.|dev-chef\\.|dev\\.localcooks|localcooks\\.ca$).*"
        }
      ],
      "destination": "https://chef.localcooks.ca/book-kitchen",
      "permanent": false
    },
    {
      "source": "/portal",
      "has": [
        {
          "type": "host",
          "value": "^(?!kitchen\\.|dev-kitchen\\.|dev\\.localcooks|localcooks\\.ca$).*"
        }
      ],
      "destination": "https://kitchen.localcooks.ca/portal",
      "permanent": false
    },
    {
      "source": "/manager",
      "has": [
        {
          "type": "host",
          "value": "^(?!kitchen\\.|admin\\.|dev-kitchen\\.|dev-admin\\.|dev\\.localcooks|localcooks\\.ca$).*"
        }
      ],
      "destination": "https://kitchen.localcooks.ca/manager",
      "permanent": false
    }
  ],
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/detect-overstays",
      "schedule": "0 6 * * *"
    }
  ]
}