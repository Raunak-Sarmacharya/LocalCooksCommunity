{
  "version": 2,
  "buildCommand": "node vercel-build.mjs",
  "outputDirectory": "dist/client",
  "devCommand": "npm run dev",
  "rewrites": [
    {
      "source": "/api/unsubscribe",
      "destination": "/api/unsubscribe.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/unsubscribe.js": {
      "memory": 512,
      "maxDuration": 10
    }
  }
}