{
  "version": 2,
  "buildCommand": "npm run build:production",
  "outputDirectory": "dist/client",
  "devCommand": "npm run dev",
  "env": {
    "VERCEL": "true"
  },
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 30
    },
    "api/sitemap.ts": {
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml; charset=utf-8" },
        { "key": "Cache-Control", "value": "public, s-maxage=3600, stale-while-revalidate=600" },
        { "key": "X-Robots-Tag", "value": "noindex" }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        { "key": "Content-Type", "value": "text/plain; charset=utf-8" },
        { "key": "Cache-Control", "value": "public, s-maxage=86400" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=(self)" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(favicon\\.png|favicon\\.ico)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=604800" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/admin/login",
      "has": [
        {
          "type": "host",
          "value": "^(?!admin\\.|dev-admin\\.|dev\\.localcooks|localcooks\\.ca$).*"
        }
      ],
      "destination": "https://admin.localcooks.ca/admin/login",
      "permanent": false
    },
    {
      "source": "/admin",
      "has": [
        {
          "type": "host",
          "value": "^(?!admin\\.|dev-admin\\.|dev\\.localcooks|localcooks\\.ca$).*"
        }
      ],
      "destination": "https://admin.localcooks.ca/admin",
      "permanent": false
    },
    {
      "source": "/apply",
      "has": [
        {
          "type": "host",
          "value": "^(?!chef\\.|dev-chef\\.|dev\\.localcooks|localcooks\\.ca$).*"
        }
      ],
      "destination": "https://chef.localcooks.ca/apply",
      "permanent": false
    },
    {
      "source": "/dashboard",
      "has": [
        {
          "type": "host",
          "value": "^(?!chef\\.|dev-chef\\.|dev\\.localcooks|localcooks\\.ca$).*"
        }
      ],
      "destination": "https://chef.localcooks.ca/dashboard",
      "permanent": false
    },
    {
      "source": "/book-kitchen",
      "has": [
        {
          "type": "host",
          "value": "^(?!chef\\.|dev-chef\\.|dev\\.localcooks|localcooks\\.ca$).*"
        }
      ],
      "destination": "https://chef.localcooks.ca/book-kitchen",
      "permanent": false
    },
    {
      "source": "/portal",
      "has": [
        {
          "type": "host",
          "value": "^(?!kitchen\\.|dev-kitchen\\.|dev\\.localcooks|localcooks\\.ca$).*"
        }
      ],
      "destination": "https://kitchen.localcooks.ca/portal",
      "permanent": false
    },
    {
      "source": "/manager",
      "has": [
        {
          "type": "host",
          "value": "^(?!kitchen\\.|admin\\.|dev-kitchen\\.|dev-admin\\.|dev\\.localcooks|localcooks\\.ca$).*"
        }
      ],
      "destination": "https://kitchen.localcooks.ca/manager",
      "permanent": false
    }
  ],
  "crons": [
    {
      "path": "/api/detect-overstays",
      "schedule": "0 6 * * *"
    }
  ]
}